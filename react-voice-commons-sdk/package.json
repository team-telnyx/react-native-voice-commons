{
  "name": "@telnyx/react-voice-commons-sdk",
  "version": "0.1.6",
  "description": "A high-level, state-agnostic, drop-in module for the Telnyx React Native SDK that simplifies WebRTC voice calling integration",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "react-native": "lib/index.js",
  "source": "src/index.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "files": [
    "lib",
    "src",
    "android",
    "ios",
    "TelnyxVoiceCommons.podspec",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf lib",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:markdown": "typedoc --options typedoc.markdown.json",
    "docs:all": "npm run docs && npm run docs:markdown",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "dev:local": "npm pkg set dependencies.@telnyx/react-native-voice-sdk=file:../package",
    "dev:published": "npm pkg set dependencies.@telnyx/react-native-voice-sdk=^0.3.0",
    "prepublishOnly": "npm run dev:published && npm install --legacy-peer-deps",
    "postpublish": "npm run dev:local && npm install --legacy-peer-deps"
  },
  "keywords": [
    "react-native",
    "telnyx",
    "webrtc",
    "voice",
    "calling",
    "sip",
    "voip",
    "commons",
    "headless"
  ],
  "author": "Telnyx",
  "license": "MIT",
  "homepage": "https://github.com/team-telnyx/react-native-voice-commons",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/team-telnyx/react-native-voice-commons.git"
  },
  "bugs": {
    "url": "https://github.com/team-telnyx/react-native-voice-commons/issues"
  },
  "peerDependencies": {
    "@react-native-async-storage/async-storage": "^2.1.0",
    "expo-router": "^5.1.0",
    "react": ">=19.0.0 <20.0.0",
    "react-native": ">=0.79.0 <1.0.0",
    "react-native-webrtc": "^124.0.5"
  },
  "peerDependenciesMeta": {
    "@react-native-async-storage/async-storage": {
      "optional": false
    },
    "expo-router": {
      "optional": false
    },
    "react": {
      "optional": false
    },
    "react-native": {
      "optional": false
    },
    "react-native-webrtc": {
      "optional": false
    }
  },
  "dependencies": {
    "@react-native-community/eslint-config": "^3.2.0",
    "@telnyx/react-native-voice-sdk": "file:../package",
    "eventemitter3": "^5.0.1",
    "expo": "~53.0.22",
    "react-native-voip-push-notification": "^3.3.3",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/react": "~19.0.14",
    "@types/react-native": "^0.72.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  }
}
